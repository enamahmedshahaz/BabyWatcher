<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_image"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity" >

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnManualAdd"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/btnManualAdd"
            android:layout_marginTop="15dp"
            android:background="@drawable/black_button"
            android:onClick="send_to_SetAction"
            android:shadowColor="#FFFFFF"
            android:shadowDx="5"
            android:shadowDy="-5"
            android:shadowRadius="15"
            android:text="Set action"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnManualAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnAdd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/black_button"
            android:onClick="Send_to_setNumber"
            android:shadowColor="#FFFFFF"
            android:shadowDx="5"
            android:shadowDy="-5"
            android:shadowRadius="15"
            android:text="Set parent number"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnManualAdd"
            android:layout_alignRight="@+id/btnManualAdd"
            android:layout_below="@+id/btnManualAdd"
            android:layout_marginTop="14dp"
            android:background="@drawable/black_button"
            android:onClick="send_to_Sensitivity"
            android:shadowColor="#FFFFFF"
            android:shadowDx="5"
            android:shadowDy="-5"
            android:shadowRadius="15"
            android:text="Set sensitivity"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button3"
            android:layout_alignRight="@+id/button3"
            android:layout_below="@+id/button3"
            android:layout_marginTop="16dp"
            android:background="@drawable/black_button"
            android:onClick="Send_to_About"
            android:shadowColor="#FFFFFF"
            android:shadowDx="5"
            android:shadowDy="-5"
            android:shadowRadius="15"
            android:text="About"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button4"
            android:layout_alignRight="@+id/button4"
            android:layout_below="@+id/button4"
            android:layout_marginTop="18dp"
            android:background="@drawable/black_button"
            android:onClick="ExitAction"
            android:shadowColor="#FFFFFF"
            android:shadowDx="5"
            android:shadowDy="-5"
            android:shadowRadius="15"
            android:text="Exit"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnStart"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button5"
            android:layout_alignRight="@+id/button5"
            android:layout_below="@+id/button5"
            android:layout_marginTop="20dp"
            android:background="@drawable/black_button"
            android:onClick="startBabyWatching"
            android:shadowColor="#FFFFFF"
            android:shadowDx="5"
            android:shadowDy="-5"
            android:shadowRadius="15"
            android:text="Start"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnStart"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="83dp"
            android:text="TextView" />
    </RelativeLayout>

</ScrollView>